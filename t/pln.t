# Before `make install' is performed this script should be runnable with
# `make test'. After `make install' it should work as `perl test.t'

use strict;
use vars qw($error $NUMTESTS);
BEGIN {
	$NUMTESTS = 4;
	$error = 0;
	eval { require Test::More; };
	if ( $@ ) {
		use lib 't/lib';
	}
	use Test::More;
	# SeqIO modules abi.pm, ctf.pm, exp.pm, pln.pm, ztr.pm
	# all require Bio::SeqIO::staden::read, part of bioperl-ext
	eval {
		require Bio::SeqIO::staden::read;
	};
	if ( $@ ) {
		plan skip_all => "Bio::SeqIO::staden::read of bioperl-ext is not installed or is installed incorrectly - skipping pln.t tests";
    } else {
    	plan tests => $NUMTESTS;
    }
    use_ok('Bio::SeqIO::pln');
    use_ok('Bio::Root::IO');
}

my $verbose = $ENV{'BIOPERLDEBUG'};

my $io = Bio::SeqIO->new(-format => 'pln',
			 -verbose => $verbose,
			 -file => Bio::Root::IO->catfile
			 (qw(t data readtest.pln) ));
ok(my $seq = $io->next_seq);
is($seq->seq, "");

